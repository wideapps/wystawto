{% extends '@Admin/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-4">
            <div class="x_panel tile">
                <div class="x_title">
                    <h2>Ogłoszenia</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {% for offer in offers %}

                    {% else %}
                    <div class="alert alert-info" style="margin-bottom: 0">Brak ogłoszeń do akceptacji</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}